@using Application.Domain
@model IEnumerable<Turma>
@{
}

<a asp-action="Create">Create New</a>

<div class="text-danger">@TempData["ErrorMessage"]</div>

<table border="1">
    <tr>
        <th>@Html.DisplayNameFor(m => m.Id)</th>
        <th>@Html.DisplayNameFor(m => m.Nome)</th>
        <th>@Html.DisplayNameFor(m => m.Professores)</th>
        <th>Actions</th>
    </tr>
    @foreach (var turma in Model)
    {
        <tr>
            <td>@Html.DisplayFor(_ => turma.Id)</td>
            <td>@Html.DisplayFor(_ => turma.Nome)</td>
            <td>@Html.DisplayFor(_ => turma.Professores)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@turma.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@turma.Id">Delete</a>
            </td>
        </tr>
    }
</table>